{
	"root": true,
	"extends": [
		"wikimedia/client",
		"wikimedia/jquery",
		"wikimedia/mediawiki"
	],
	"globals": {
		"mediaWiki": false,
		"jQuery": false
	},
	"rules": {
		"camelcase": "warn",
		"jsdoc/require-param-type": "warn",
		"max-len": "warn",
		"no-alert": "warn",
		"no-jquery/no-fade": "warn",
		"no-jquery/no-global-selector": "warn",
		"no-jquery/no-sizzle": "warn",
		"unicorn/prefer-string-slice": "warn",
		"prefer-const": "warn",
		"no-jquery/no-done-fail": "warn"
	}
}
